<div class="jumbotron">
<h2>Click to see stuff</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">

      <ul>
        {{#each model.products as |product|}}
        <!-- <img src={{product.image}}> -->
        <li>{{#link-to 'store.product' product.id}}{{product.title}}{{/link-to}}</li>
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      {{outlet}}
    </div>

    <div class="col-md-3">
      {{display-cart}}
      {{total-cost}}
    </div>
  </div>

</div>

<div class="container">
  <div class="row">
    {{#each model.products as |product|}}
      {{product-tile product=product saveCommentD='saveCommentE' saveVoteD='saveVoteE'}}
    {{/each}}
  </div>
</div>

<div class="container">
  {{new-product  saveB='saveC'}}
</div>
